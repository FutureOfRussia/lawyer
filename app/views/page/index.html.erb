<!-- Header -->
<nav class="navbar fixed-top navbar-toggleable-sm navbar-light" id="navbar" style="background-color: rgba(256,256,256,1); box-shadow: 0 0 15px black;">
	<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<a class="navbar-brand" href="#body">
		Коллегия адвокатов
	</a>

	<div class="collapse navbar-collapse  nav-end" id="navbarToggler">
		<ul class="navbar-nav">
			<li class="nav-item ">
				<a class="nav-link" href="#services">Услуги</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#about">О нас</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#cert">Сертификаты</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#practice">Практика</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="#contacts">Контакты</a>
			</li>
		</ul>
	</div>
</nav>
<!-- End -->

<!-- Content -->
<div class="container-fluid content-marg">
	<div class="row">
		<!-- Promo block -->
		<div class="col-12 promo bg">
			<div class="row justify-content-center row-bg">
				<div class="col-xl-6 col-lg-7 col-md-9 promo-text">
					<p class="t1">Адвокат в Орле</p>
					<p class="t2">8 (800) 555-35-35</p>
					<p class="t3">Легче позвонить, чем у когото занимать</p>
				</div>
				<div class="col-xl-4 col-lg-6 col-md-7 call-form">
					<div class="row">
						<div class="offset-1 col-10 call-form-text">
							Оставьте заявку и адвокат свяжется с Вами
						</div>
					</div>
					<div class="form-group row">
						<label for="name-input-1" class="offset-1 col-3 col-form-label">Имя:</label>
						<div class="col-7">
							<input type="name" class="form-control" id="name-input-1">
						</div>
					</div>
					<div class="form-group row">
						<label for="tel-input-1" class="offset-1 col-3 col-form-label">Телефон:</label>
						<div class="col-7">
							<input type="tel" class="form-control" id="tel-input-1">
						</div>
					</div>
					<div class="row">
						<button type="submit" class="offset-2 col-8 btn btn-outline-success call-form-btn">Отправить заявку</button>
					</div>
				</div>
			</div>
		</div>
		<!-- End -->

		<!-- Services block -->
		<div class="col-12 services" id="services">
			<div class="row">
				<div class="col-12 work bg">
					
				</div>
				<div class="col-12 direct bg">
					<div class="row justify-content-center">
						<div class="col-12">
							<p class="t1">Решение вашей проблемы за 4 простых шага:</p>
						</div>
						<div class="col-12 col-sm-12 col-md-3 step">
							<div class="row">
								<div class="col-3 col-sm-3 col-md-12">
									<i class="fa fa-phone fa-4x icon"></i>
								</div>
								<div class="col-9 col-sm-9 col-md-12 text">
									Свяжитесь с нами (позвоните, оставьте заявку или придите  в офис)
								</div>
							</div>
						</div>
						<div class="col-12 col-sm-12 col-md-3 step">
							<div class="row">
								<div class="col-3 col-sm-3 col-md-12">
									<i class="fa fa-comments-o fa-4x icon"></i>
								</div>
								<div class="col-9 col-sm-9 col-md-12 text">
									Консультация
								</div>
							</div>
						</div>
						<div class="col-12 col-sm-12 col-md-3 step">
							<div class="row">
								<div class="col-3 col-sm-3 col-md-12">
									<i class="fa fa-check-square-o fa-4x icon"></i>
								</div>
								<div class="col-9 col-sm-9 col-md-12 text">
									Заключение договора
								</div>
							</div>
						</div>
						<div class="col-12 col-sm-12 col-md-3 step">
							<div class="row">
								<div class="col-3 col-sm-3 col-md-12">
									<i class="fa fa-shield fa-4x icon"></i>
								</div>
								<div class="col-9 col-sm-9 col-md-12 text">
									Квалифицированная защита ваших интересов
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End -->

		<!-- About us block -->
		<div class="col-12 about bg" id="about">
			
		</div>
		<!-- End -->

		<!-- Certificates block -->
		<div class="col-12 cert bg" id="cert">
			<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
					<li data-target="#carouselIndicators" data-slide-to="1"></li>
					<li data-target="#carouselIndicators" data-slide-to="2"></li>
				</ol>
				<div class="carousel-inner" role="listbox">
					<div class="carousel-item active">
						<%= image_tag('lawyer-direct.jpg', class: "d-block img-fluid cert-img", alt: "First slide") %>
					</div>
					<div class="carousel-item">
						<%= image_tag('lawyer-promo.jpg', class: "d-block img-fluid cert-img", alt: "Second slide") %>
					</div>
					<div class="carousel-item">
						<%= image_tag('lawyer-deal.jpg', class: "d-block img-fluid cert-img", alt: "Third slide") %>
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
		<!-- End -->

		<!-- Practice block -->
		<div class="col-12 practice bg" id="practice">
			
		</div>
		<!-- End -->

		<!-- Contacts block -->
		<div class="col-12 contacts bg" id="contacts">
			<div class="row row-bg">
				<div class="col-12 t1">Оставьте заявку и адвокат свяжется с Вами</div>
				<div class="col-12">
					<div class="form-group row justify-content-center">
						<label for="name-input-2" class="sr-only">Имя: </label>
						<input type="name" class="col-xl-2 col-md-3 col-sm-4 col-12 form-control" id="name-input-2" placeholder="Имя">
						<label for="tel-input-2" class="sr-only">Телефон: </label>
						<input type="tel" class="col-xl-2 col-md-3 col-sm-4 col-12 form-control" id="tel-input-2" placeholder="Телефон">
						<button type="submit" class="btn btn-success col-xl-2 col-md-3 col-sm-4 col-12">Отправить заявку</button>
					</div>
				</div>
				<div class="card card-inverse offset-lg-4 col-lg-4 offset-md-3 col-md-6 offset-sm-2 col-sm-8 col-12" style="background-color: rgba(0,0,0,0.6);">
					<div class="card-header" style="border-color: #fff;">
						Наш адрес:
					</div>
					<div class="card-block">
						<blockquote class="card-blockquote">
							<p>Ул. Красноармейская, д. 16</p>
							<footer>Часы работы:<cite title="Часы работы"> пн-пт 9-18</cite></footer>
						</blockquote>
					</div>
				</div>
				<div class="col-xl-6 offset-xl-3 col-md-8 offset-md-2 col-12 map">
					<div class="row">
						<div class="col-12" id="map"></div>
					</div>
				</div>
				<div class="col-12 footer"></div>
			</div>
		</div>
		<!-- End -->
	</div>
</div>
<!-- End -->